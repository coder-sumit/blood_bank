<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/doner.css">
    <title>Blood Bank | Developed by Roopam</title>
  </head>
  <body>

    <!-- header starts here -->
  <header>
    <%- include('./partials/nav.ejs') %>
    </header>

   <div class="viewbox">

       <%
       for(let i of doner){
        %>
        <div class="view-card">
          
          <div class="view-img">
            <img src="img/doner.png" alt="doner">
          </div>
          <div>
            <h3 class="doner-name">
             <%= i.donerName %>
            </h3>
            <p class="doner-phone"><%= i.donerMobile %></p>
          </div>
          <div class="blood-group">
            <%= i.bloodGroup %>
          </div>
        </div>
        <%
       }
       %>
      


   </div>


      <%- include('./partials/foo.ejs'); %>
    <script src="js/app.js"></script>
  </body>
</html>