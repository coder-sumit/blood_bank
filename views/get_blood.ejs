<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/doner.css">
<link rel="stylesheet" href="css/get-blood.css">

    <title>Blood Bank | Developed by Roopam</title>
  </head>
  <body>

    <!-- header starts here -->
  <header>
    <%- include('./partials/nav.ejs') %>


    <div class="view-box">

      <% for(let i of bank){ %>
      <div class="view-card">
        <div class="view-img">
          <img src="img/blood-bank.svg" alt="blood bank">
        </div>
        <div>
          <h3 class="bank-name">
            <%= i.bbname %>
          </h3>
          <p class="bank-phone"><%= i.bbnumber %></p>
        </div>


          <div class="blood-groups">
              <% for(let j of i.bbGroup){ %>
            <div class="bd-grps">
             <p> <%= j %> </p> 
            </div>  
            <% } %> 
          </div>


      </div>
      <% } %>
    </div>


    <%- include('./partials/foo.ejs'); %>
    <script src="js/app.js"></script>
  </body>
</html>